<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageBackground"
        android:layout_height="match_parent"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/greenTea">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textbackground"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|fill_vertical"
            android:paddingRight="10dp"
            android:text="Green Tea"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="300dp"
            android:id="@+id/teaBackground"
            android:layout_height="180dp"
            android:layout_gravity="left|center"
            android:background="@drawable/greentea"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:transitionName="myImage"/>

        <Button
            android:id="@+id/openButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:gravity="bottom|right|center_horizontal"
            android:textAlignment="gravity" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/innerRecipeRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>